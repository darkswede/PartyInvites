@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>RsvpForm</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="pa">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name"> Name and Surname:</label>
                    <input class="form-control" asp-for="Name"/>
                </div>
                <div class="form-group">
                    <label asp-for="Email"> E-Mail Adress:</label>
                    <input class="form-control" asp-for="Email"/>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"> Phone Number:</label>
                    <input class="form-control" asp-for="Phone"/>
                </div>
                <div class="form-group">
                    <label>Will you attend to our party?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Select an option.</option>
                        <option value="true">Yep, will be there</option>
                        <option value="false">Nah, next time</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Send RSVP</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>